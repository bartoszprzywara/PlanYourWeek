<Application
    x:Class="Remonty.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Remonty"
    RequestedTheme="Light">

    <Application.Resources>
        <SolidColorBrush x:Key="ForegroundMainColor" Color="White"/>
        <SolidColorBrush x:Key="BackgroundMainColor" Color="{ThemeResource SystemAccentColor}"/>
        <SolidColorBrush x:Key="LightAccentColor" Color="{ThemeResource SystemControlHighlightListAccentLowBrush}"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#FFF4F4F4"/>
    </Application.Resources>
</Application>
